<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Peluquer√≠a LuxeSalon{% endblock %}</title>
    
    <!-- Google Fonts: Manrope -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Material Icons & Symbols -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">

    {% block stylesheets %}
        {{ ux_controller_link_tags() }}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-800 dark:text-slate-100 font-display antialiased min-h-screen">
    {% block body %}{% endblock %}

    {% block flash_messages %}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="fixed top-4 right-4 z-[100] px-6 py-3 rounded-xl shadow-lg text-white font-medium transition-all duration-300
                    {% if type == 'success' %}bg-emerald-500{% elseif type == 'error' %}bg-red-500{% else %}bg-primary{% endif %}"
                    x-data="{ show: true }" x-show="show" x-init="setTimeout(() => show = false, 4000)">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endblock %}
</body>
</html>
