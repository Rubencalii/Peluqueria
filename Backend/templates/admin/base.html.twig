{% extends 'base.html.twig' %}

{% block body %}
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    <aside class="hidden md:flex flex-col w-64 bg-slate-900 text-slate-300 border-r border-slate-800 transition-all duration-300">
        <!-- Logo -->
        <div class="p-6 flex items-center gap-3">
            <span class="material-icons-outlined text-primary text-2xl">spa</span>
            <span class="font-bold text-xl tracking-tight text-white">LuxeSalon</span>
        </div>

        <!-- Navigation -->
        <nav class="flex-grow px-4 space-y-1 overflow-y-auto custom-scrollbar">
            <a href="{{ path('app_admin_dashboard') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg transition-colors {% if app.request.attributes.get('_route') == 'app_admin_dashboard' %}bg-primary text-white shadow-lg shadow-primary/20{% else %}hover:bg-slate-800 hover:text-white{% endif %}">
                <span class="material-icons-outlined text-xl">grid_view</span>
                <span class="font-medium text-sm">Dashboard</span>
            </a>
            <a href="{{ path('app_admin_appointments') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg transition-colors {% if app.request.attributes.get('_route') == 'app_admin_appointments' %}bg-primary text-white shadow-lg shadow-primary/20{% else %}hover:bg-slate-800 hover:text-white{% endif %}">
                <span class="material-icons-outlined text-xl">calendar_today</span>
                <span class="font-medium text-sm">Citas</span>
            </a>
            <div class="pt-4 pb-2">
                <span class="px-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Gestión</span>
            </div>
            <a href="{{ path('app_admin_services') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg transition-colors {% if app.request.attributes.get('_route') == 'app_admin_services' %}bg-primary text-white shadow-lg shadow-primary/20{% else %}hover:bg-slate-800 hover:text-white{% endif %}">
                <span class="material-icons-outlined text-xl">content_cut</span>
                <span class="font-medium text-sm">Servicios</span>
            </a>
            <a href="{{ path('app_admin_employees') }}" class="flex items-center gap-3 px-4 py-3 rounded-lg transition-colors {% if app.request.attributes.get('_route') == 'app_admin_employees' %}bg-primary text-white shadow-lg shadow-primary/20{% else %}hover:bg-slate-800 hover:text-white{% endif %}">
                <span class="material-icons-outlined text-xl">badge</span>
                <span class="font-medium text-sm">Personal</span>
            </a>
            <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg transition-colors hover:bg-slate-800 hover:text-white">
                <span class="material-icons-outlined text-xl">group</span>
                <span class="font-medium text-sm">Clientes</span>
            </a>
            <div class="pt-4 pb-2">
                <span class="px-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Ajustes</span>
            </div>
            <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-lg transition-colors hover:bg-slate-800 hover:text-white">
                <span class="material-icons-outlined text-xl">settings</span>
                <span class="font-medium text-sm">Configuración</span>
            </a>
        </nav>

        <!-- User Info -->
        <div class="p-4 mt-auto border-t border-slate-800">
            <div class="flex items-center gap-3 p-3 rounded-xl bg-slate-800/50">
                <div class="w-10 h-10 rounded-full bg-primary/20 text-primary flex items-center justify-center font-bold">
                    {{ app.user.name|slice(0, 1)|upper }}
                </div>
                <div class="flex-grow overflow-hidden">
                    <p class="text-sm font-bold text-white truncate">{{ app.user.name }}</p>
                    <p class="text-xs text-slate-500 truncate capitalize">{{ app.user.roles[0]|replace({'ROLE_': ''})|lower }}</p>
                </div>
                <a href="{{ path('app_logout') }}" class="p-2 hover:text-white transition-colors">
                    <span class="material-icons-outlined text-lg">logout</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content Area -->
    <main class="flex-1 flex flex-col bg-background-light dark:bg-background-dark overflow-hidden">
        <!-- Header -->
        <header class="h-20 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-border-light dark:border-border-dark flex items-center justify-between px-8 sticky top-0 z-30">
            <div>
                <h1 class="text-xl font-bold text-slate-900 dark:text-white">
                    {% block admin_title %}Dashboard{% endblock %}
                </h1>
                <p class="text-xs text-slate-500">Sesión iniciada como: <span class="text-primary font-medium">{{ app.user.name }}</span></p>
            </div>
            
            <div class="flex items-center gap-4">
                <button class="p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full text-slate-500 dark:text-slate-400">
                    <span class="material-icons-outlined">notifications</span>
                </button>
                <div class="h-8 w-[1px] bg-slate-200 dark:bg-slate-800 mx-2"></div>
                <div class="flex items-center gap-3 px-3 py-1.5 rounded-full border border-slate-200 dark:border-slate-800">
                    <div class="w-8 h-8 rounded-full bg-primary flex items-center justify-center text-white text-xs font-bold leading-none">
                        {{ app.user.name|slice(0, 1)|upper }}
                    </div>
                </div>
            </div>
        </header>

        <!-- Dynamic Content -->
        <div class="flex-1 overflow-y-auto custom-scrollbar p-8">
            {% block admin_content %}{% endblock %}
        </div>
    </main>
</div>
{% endblock %}
