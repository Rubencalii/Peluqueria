{% extends 'admin/base.html.twig' %}

{% block title %}Cierre de Caja - LuxeSalon{% endblock %}

{% block admin_content %}
<div class="max-w-4xl mx-auto space-y-8 animate-fade-in-up">
    <div>
        <h1 class="text-3xl font-black text-slate-900 dark:text-white">Cierre de Caja Diario</h1>
        <p class="text-slate-500 dark:text-slate-400 font-medium">Resumen financiero del día {{ "now"|date("d/m/Y") }}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-100 dark:border-emerald-800 p-6 rounded-3xl">
            <p class="text-xs font-bold text-emerald-600 dark:text-emerald-400 uppercase tracking-widest mb-2">Efectivo</p>
            <p class="text-3xl font-black text-emerald-700 dark:text-emerald-300">{{ revenue.cash }}€</p>
        </div>
        <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-100 dark:border-blue-800 p-6 rounded-3xl">
            <p class="text-xs font-bold text-blue-600 dark:text-blue-400 uppercase tracking-widest mb-2">Tarjeta (Terminal)</p>
            <p class="text-3xl font-black text-blue-700 dark:text-blue-300">{{ revenue.card }}€</p>
        </div>
        <div class="bg-purple-50 dark:bg-purple-900/20 border border-purple-100 dark:border-purple-800 p-6 rounded-3xl">
            <p class="text-xs font-bold text-purple-600 dark:text-purple-400 uppercase tracking-widest mb-2">Online (Stripe)</p>
            <p class="text-3xl font-black text-purple-700 dark:text-purple-300">{{ revenue.online }}€</p>
        </div>
    </div>

    <div class="bg-white dark:bg-slate-900 border border-slate-100 dark:border-slate-800 rounded-3xl shadow-premium p-8">
        <h2 class="text-xl font-bold text-slate-900 dark:text-white mb-6">Conciliación de Efectivo</h2>
        
        <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Efectivo Real en Caja</label>
                    <input type="number" step="0.01" class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white font-bold" placeholder="0.00">
                </div>
                <div>
                    <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Fondo de Caja (Mañana)</label>
                    <input type="number" step="0.01" value="50.00" class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white font-bold">
                </div>
            </div>

            <div>
                <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 mb-2">Observaciones / Descuadres</label>
                <textarea rows="3" class="w-full px-4 py-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 text-slate-900 dark:text-white" placeholder="Ej: Error en devolución de cambio..."></textarea>
            </div>

            <div class="pt-6 border-t border-slate-100 dark:border-slate-800 flex justify-between items-center">
                <div class="text-left">
                    <p class="text-sm font-bold text-slate-900 dark:text-white">Total Recaudado Hoy</p>
                    <p class="text-2xl font-black text-primary">{{ revenue.total }}€</p>
                </div>
                <button type="submit" class="px-8 py-4 bg-primary text-white font-bold rounded-2xl shadow-lg shadow-primary/20 hover:bg-primary-hover transition-all">
                    Finalizar y Cerrar Día
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
