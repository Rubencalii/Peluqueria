{% extends 'admin/base.html.twig' %}

{% block title %}Servicios - Peluquería{% endblock %}
{% block page_title %}Servicios{% endblock %}
{% block page_subtitle %}Gestión del catálogo de servicios{% endblock %}

{% block content %}
    <div class="mb-6 flex justify-between items-center">
        <p class="text-gray-500">{{ services|length }} servicios registrados</p>
        <a href="{{ path('app_admin_service_new') }}"
           class="bg-gradient-to-r from-purple-600 to-pink-500 text-white px-5 py-2.5 rounded-xl font-medium hover:shadow-lg hover:shadow-purple-500/25 transition-all duration-200">
            + Nuevo Servicio
        </a>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
        <table class="w-full">
            <thead>
                <tr class="bg-gray-50/80 border-b border-gray-100">
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Servicio</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Categoría</th>
                    <th class="px-6 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider">Duración</th>
                    <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Precio</th>
                    <th class="px-6 py-3 text-center text-xs font-semibold text-gray-500 uppercase tracking-wider">Estado</th>
                    <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-50">
                {% for service in services %}
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4">
                            <p class="font-medium text-gray-900">{{ service.name }}</p>
                            {% if service.description %}
                                <p class="text-sm text-gray-400 mt-0.5">{{ service.description|truncate(60) }}</p>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <span class="px-2.5 py-1 bg-gray-100 rounded-lg text-xs font-medium text-gray-600">
                                {{ service.category|default('Sin categoría') }}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-center text-sm text-gray-600">{{ service.duration }} min</td>
                        <td class="px-6 py-4 text-right font-semibold text-gray-900">{{ service.formattedPrice }}</td>
                        <td class="px-6 py-4 text-center">
                            <span class="px-2.5 py-1 rounded-full text-xs font-semibold
                                {% if service.active %}bg-emerald-100 text-emerald-700{% else %}bg-red-100 text-red-700{% endif %}">
                                {{ service.active ? 'Activo' : 'Inactivo' }}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <a href="{{ path('app_admin_service_edit', {id: service.id}) }}"
                               class="text-purple-600 hover:text-purple-700 font-medium text-sm">
                                Editar
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-gray-400">
                            No hay servicios registrados. ¡Crea el primero!
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
