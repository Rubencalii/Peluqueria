{% extends 'admin/base.html.twig' %}

{% block title %}{{ isNew ? 'Nuevo Servicio' : 'Editar Servicio' }} - Peluquería{% endblock %}
{% block page_title %}{{ isNew ? 'Nuevo Servicio' : 'Editar: ' ~ service.name }}{% endblock %}
{% block page_subtitle %}{{ isNew ? 'Añadir un nuevo servicio al catálogo' : 'Modificar datos del servicio' }}{% endblock %}

{% block content %}
    <div class="max-w-2xl">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                <div>
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div>
                    {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all resize-none'}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.duration, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.duration, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all'}}) }}
                        {{ form_errors(form.duration) }}
                    </div>
                    <div>
                        {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.price, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all'}}) }}
                        {{ form_errors(form.price) }}
                    </div>
                </div>

                <div>
                    {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-2.5 border border-gray-200 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all'}}) }}
                    {{ form_errors(form.category) }}
                </div>

                <div class="flex items-center gap-3">
                    {{ form_widget(form.active, {'attr': {'class': 'w-4 h-4 text-purple-600 rounded focus:ring-purple-500'}}) }}
                    {{ form_label(form.active, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
                </div>

                <div class="flex gap-3 pt-4 border-t border-gray-100">
                    <button type="submit"
                            class="bg-gradient-to-r from-purple-600 to-pink-500 text-white px-6 py-2.5 rounded-xl font-medium hover:shadow-lg hover:shadow-purple-500/25 transition-all duration-200">
                        {{ isNew ? 'Crear Servicio' : 'Guardar Cambios' }}
                    </button>
                    <a href="{{ path('app_admin_services') }}"
                       class="px-6 py-2.5 rounded-xl font-medium text-gray-600 hover:bg-gray-100 transition-colors">
                        Cancelar
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
